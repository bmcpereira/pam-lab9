{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Messages API",
      "description": "API for managing messages with expiration and mutex locking.",
      "contact": {
        "name": "Rúben P. Lourenço",
        "email": "ruben.lourenco@estsetubal.ips.pt"
      }
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "schemes": ["http"],
    "paths": {
      "/messages": {
        "get": {
          "summary": "Retrieve all messages",
          "description": "Fetches all non-expired messages.",
          "responses": {
            "200": {
              "description": "Successful response with a list of messages.",
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "123e4567-e89b-12d3-a456-426614174000"
                    },
                    "username": {
                      "type": "string",
                      "example": "JohnDoe"
                    },
                    "text": {
                      "type": "string",
                      "example": "Hello, world!"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-12-19T12:34:56Z"
                    }
                  },
                  "required": ["id", "username", "text", "timestamp"]
                }
              }
            }
          }
        }
      },
      "/message": {
        "post": {
          "summary": "Add a new message",
          "description": "Adds a new message to the system with an expiration time.",
          "parameters": [
            {
              "in": "body",
              "name": "message",
              "description": "Message to be added.",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "JohnDoe"
                  },
                  "text": {
                    "type": "string",
                    "example": "Hello, world!"
                  }
                },
                "required": ["username", "text"]
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Message created successfully.",
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "example": "123e4567-e89b-12d3-a456-426614174000"
                  },
                  "username": {
                    "type": "string",
                    "example": "JohnDoe"
                  },
                  "text": {
                    "type": "string",
                    "example": "Hello, world!"
                  },
                  "timestamp": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2024-12-19T12:34:56Z"
                  },
                  "expiry": {
                    "type": "integer",
                    "example": 1734611696000
                  }
                },
                "required": ["id", "username", "text", "timestamp", "expiry"]
              }
            },
            "400": {
              "description": "Bad request. Missing username or text.",
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string",
                    "example": "Username and text are required"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  